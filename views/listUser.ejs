        <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5">

        <h2 class="mb-4">Detalhes Pessoa</h2>
  <form action="" id="formUser" >
      
    <div class="form-group col-md-4">
      <label for="nome">Nome</label>
      <input readonly type="text" class="form-control" name="nome" value="<%= user.nome %>">
    </div>
    
    <div class="form-group col-md-4">
      <label for="endereco">Endereço</label>
      <input readonly type="text" class="form-control" id="endereco" name="endereco" value="<%= user.endereco %>">

    </div>
    <div class="form-row">
      <div class="form-group col-md-2">
        <label id="tel" for="telefone">Telefone</label>
        <input readonly type="text" class="form-control" id="telefone" name="telefone" value="<%= user.telefone%>">
      </div>
      <div class="form-group col-md-2">
        <label id="cel" for="celular">Celular</label>
        <input readonly type="text" class="form-control" id="celular" name="celular" value="<%= user.celular %>">
      </div>
    </div>
    
      <div class="form-group col-md-4">
        <label for="bairro">Bairro</label>
        <input readonly type="text" class="form-control" id="bairro" name="bairro" value="<%= user.bairro %>">
      </div>
      <div class="form-group col-md-4">
        <label for="regiao">Região</label>
        <input readonly type="text" class="form-control" id="regiao" name="regiao" value="<%= user.regiao %>">
      </div>
    
    <div class="form-row">
    <div class="form-group col-md-2">
      <label id="sex" for="sexo">Sexo</label>
      <input readonly type="text" id="sexo" name="sexo" class="form-control" value="<%= user.sexo %>">
    </div>
    <div class="form-group col-md-2">
      <label id="dt" for="dtnascimento">Data de Nascimento</label>
      <input readonly type="text" class="form-control" id="dtnascimento" name="dtnascimento" value="<%= user.dtnascimento %>">
    </div>
    </div>
    
    <div class="form-row">
    <div class="form-group col-md-2">
      <label id="emaill" for="email">E-mail</label>
      <input readonly type="text" class="form-control" id="email" name="email" value="<%= user.email %>">
    </div>
    <div class="form-group col-md-2">
      <label id="est" for="estadocivil">Estado Civil</label>
      <input readonly type="text" id="estadocivil" name="estadocivil" class="form-control" value="<%= user.estadocivil %>">
    </div>
    </div>

    <div class="form-row">
    <div class="form-group col-md-2">
      <label id="son" for="filhos">Filhos</label>
      <input readonly type="text" class="form-control" id="filhos" name="filhos" value="<%= user.filhos %>">
    </div>
    <div class="form-group col-md-2">
      <label id="qt" for="qtFilhos">Quant. Filhos</label>
      <input readonly type="text" class="form-control" id="qtFilhos" name="qtFilhos" value="<%= user.qtFilhos %>">
    </div>
    </div>
  
    <div class="form-group col-md-4">
      <label for="origem">Origem</label>
      <input readonly type="text" class="form-control" id="origem" name="origem" value="<%= user.origem %>">
    </div>
    <div class="form-group col-md-4">
      <label for="observacao">Observação</label>
      <input readonly type="text" class="form-control" id="observacao" name="observacao" value="<%= user.observacao%>">
    </div>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleted">Deletar</button>
    <a href='/edit/updateUser/<%= user.idusuarios%>' type="button" class="btn btn-primary">Editar</a>
    <hr>
    </hr>

    <!------------------------------------------------------------------------------------------------------------------------------------>
    <div class="modal" tabindex="-1" role="dialog" id ="deleted">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">ALERTA</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Você realmente deseja deletar o cadastro?</p>
          </div>
          <div class="modal-footer">
            <a href='/del/delUser/<%= user.idusuarios%>' type="button" class="btn btn-danger">Deletar</a>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          </div>
        </div>
      </div>
    </div>
  
  </form>

