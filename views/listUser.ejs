        <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5">

        <h2 class="mb-4">Detalhes Pessoa</h2>
  <form action="" id="formUser" >
      
    <div class="form-group col-md-4">
      <label for="nome">Nome</label>
      <input readonly type="text" class="form-control" name="nome" value="<%= usuario.nome %>">
    </div>
    
    <div class="form-group col-md-4">
      <label for="endereco">Endereço</label>
      <input readonly type="text" class="form-control" id="endereco" name="endereco" value="<%= usuario.endereco %>">

    </div>
    <div class="form-row">
      <div class="form-group col-md-2">
        <label class="updateText" id="tel" for="telefone">Telefone</label>
        <input readonly type="text" class="form-control update-form2" id="telefone" name="telefone" value="<%= usuario.telefone%>">
      </div>
      <div class="form-group col-md-2">
        <label class="updateText" id="cel" for="celular">Celular</label>
        <input readonly type="text" class="form-control update-form2" id="celular" name="celular" value="<%= usuario.celular %>">
      </div>
    </div>
    
      <div class="form-group col-md-4">
        <label for="bairro">Bairro</label>
        <input readonly type="text" class="form-control" id="bairro" name="bairro" value="<%= usuario.bairro %>">
      </div>
      <div class="form-group col-md-4">
        <label for="regiao">Região</label>
        <input readonly type="text" class="form-control" id="regiao" name="regiao" value="<%= usuario.regiao %>">
      </div>
    
    <div class="form-row">
    <div class="form-group col-md-2">
      <label class="updateText" id="sex" for="sexo">Sexo</label>
      <input readonly type="text" id="sexo" name="sexo" class="form-control update-form2" value="<%= usuario.sexo %>">
    </div>
    <div class="form-group col-md-2">
      <label class="updateText" id="dt1" for="dtnascimento">Data de Nascimento</label>
      <input readonly type="text" class="form-control update-form2" id="dtnascimento" name="dtnascimento" data-mask="00/00/0000" value ="<%= usuario.dtDia +'/'+ usuario.dtMes +'/'+ usuario.dtAno %>">
    </div>
    </div>
    
    <div class="form-row">
    <div class="form-group col-md-2">
      <label class="updateText" id="emaill" for="email">E-mail</label>
      <input readonly type="text" class="form-control update-form2" id="email" name="email" value="<%= usuario.email %>">
    </div>
    <div class="form-group col-md-2">
      <label class="updateText" id="est" for="estadocivil">Estado Civil</label>
      <input readonly type="text" id="estadocivil" name="estadocivil" class="form-control update-form2" value="<%= usuario.estadocivil %>">
    </div>
    </div>

    <div class="form-row">
    <div class="form-group col-md-2">
      <label class="updateText" id="son" for="filhos">Filhos</label>
      <input readonly type="text" class="form-control update-form2" id="filhos" name="filhos" value="<%= usuario.filhos %>">
    </div>
    <div class="form-group col-md-2">
      <label class="updateText" id="qt" for="qtFilhos">Quant. Filhos</label>
      <input readonly type="text" class="form-control update-form2" id="qtFilhos" name="qtFilhos" value="<%= usuario.qtFilhos %>">
    </div>
    </div>
  
    <div class="form-group col-md-4">
      <label for="origem">Origem</label>
      <input readonly type="text" class="form-control" id="origem" name="origem" value="<%= usuario.origem %>">
    </div>
    <div class="form-group col-md-4">
      <label for="observacao">Observação</label>
      <input readonly type="text" class="form-control" id="observacao" name="observacao" value="<%= usuario.observacao%>">
    </div>
    <div class="form-group col-md-4">
      <label for="status">STATUS</label>
      <input readonly type="text" class="form-control" id="status" name="status" value="<%= usuario.status%>">
    </div>
    
    <% if (user.eAdmin !=0) { %>
    <button id="del" type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleted">Deletar</button>
    <% } %>
    <a href='/edit/updateUser/<%= usuario.idusuarios%>' type="button" class="btn btn-primary">Editar</a>
  
    <!------------------------------------------------------------------------------------------------------------------------------------>
    <div class="modal" tabindex="-1" role="dialog" id ="deleted">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">ALERTA</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Você realmente deseja deletar o cadastro?</p>
          </div>
          <div class="modal-footer">
            <a href='/del/delUser/<%= usuario.idusuarios%>' type="button" class="btn btn-danger">Deletar</a>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          </div>
        </div>
      </div>
    </div>
  
  </form>
  <% if (user.eAdmin !=0) { %>
 <div class="adm">
      <label for="createdAt">CRIADO EM: </label>
      <input readonly type="text" class="form-control up1" id="createdAt" name="createdAt" value="<%= usuario.createdAt%>">
      <p></p>
      <label for="updatedAt">EDITADO EM:</label>
      <input readonly type="text" class="form-control up1" id="updatedAt" name="updatedAt" value="<%= usuario.updatedAt%>">

  </div>
  <% } %>

