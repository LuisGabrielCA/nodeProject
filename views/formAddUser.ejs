      <div id="content" class="p-4 p-md-5 pt-5">

        <h2 class="mb-4">Cadastrar</h2>
        
    <form action="/add/addUser" method="POST" onsubmit="formatForm()">
    
        <div class="form-group col-md-4">
            <label  for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" required>
        </div>
        <div class="form-group col-md-4">
            <label  for="endereco">Endereço</label>
            <input type="text" class="form-control" id="endereco" name="endereco" >

        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label class="updateText" id= "tel" for="telefone">Telefone</label>
                <input  type="text" class="form-control update-form2" id="telefone" name="telefone" data-mask="(00) 0000-0000">
            </div>
            <div class="form-group col-md-2">
                <label class="updateText" id="cel" for="celular">Celular</label>
                <input type="text" class="form-control update-form2" id="celular" name="celular" data-mask="(00) 00000-0000" required>
            </div>
        </div>
            <div class="form-group col-md-4">
                <label  for="bairro">Bairro</label>
                <input type="text" class="form-control" id="bairro" name="bairro" >
            </div>
            <div class="form-group col-md-4">
                <label for="regiao">Região</label>
                <input type="text" class="form-control" id="regiao" name="regiao" >
            </div>
            <div class="form-row">
        <div class="form-group col-md-2">
            <label class="updateText" id="sex" for="sexo">Sexo</label>
            <select id="sexo" name="sexo" class="form-control update-form2" >
                <option selected></option>
                <option value="MASCULINO">Masculino</option>
                <option value="FEMININO">Feminino</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label class="updateText" id="dt1" for="dtnascimento1">Data de Nascimento</label>
            <input type="text" class="form-control update-form2" id="dtnascimento" name="dtnascimento" data-mask="00/00/0000">
        </div>
        </div>
        
        <div class="form-row">
        
            <div class="form-group col-md-2">
                <label class="updateText" id="est" for="estadocivil">Estado Civil</label>
                <select id="estadocivil" name="estadocivil" class="form-control update-form2" >
                    <option selected> </option>
                    <option value="SOLTEIRO(A)">Solteiro(a)</option>
                    <option value="CASADO(A)">Casado(a)</option>
                    <option value="DIVORCIADO(A)">Divorciado(a)</option>
                    <option value="VIUVO(A)">Viuvo(a)</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label class="updateText" id = "emaill" for="email">E-mail</label>
                <input type="email" class="form-control update-form2" id="email" name="email">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label class="updateText" id="son" for="filhos">Filhos</label>
                <select id="filhos" name="filhos" class="form-control update-form2">
                    <option selected> </option>
                    <option value="SIM">Sim</option>
                    <option value="NAO">Não</option>
                </select>
            </div>
        <div class="form-group col-md-2">
            <label class="updateText" id="qt" for="qtFilhos">Quant. Filhos</label>
            <input type="text" class="form-control update-form2" id="qtFilhos" name="qtFilhos">
        </div>
        </div>

        <div class="form-group col-md-4">
            <label  for="origem">Origem</label>
            <input type="text" class="form-control" id="origem" name="origem">
        </div>
        <div class="form-group col-md-4">
            <label  for="observacao">Observação</label>
            <input type="text" class="form-control" id="observacao" name="observacao">
        </div>
        <div class="form-group col-md-2">
            <label  for="status">STATUS</label>
            <input readonly type="text" class="form-control" id="status" name="status" value="ATIVO">
        </div>
    
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
      
		</div>

