        <h2 class="mb-4">Cadastrar</h2>
        
    <form action="/cadUsuario" method="POST" onsubmit="formatForm()">
    
        <div class="form-group col-md-4">
            <label  for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" required>
        </div>
        <div class="form-group col-md-4">
            <label  for="endereco">Endereço</label>
            <input type="text" class="form-control" id="endereco" name="endereco" required>

        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label  id= "tel" for="telefone">Telefone</label>
                <input  type="text" class="form-control" id="telefone" name="telefone" data-mask="(00) 0000-0000">
            </div>
            <div class="form-group col-md-2">
                <label id="cel" for="celular">Celular</label>
                <input type="text" class="form-control" id="celular" name="celular" data-mask="(00) 00000-0000">
            </div>
        </div>
            <div class="form-group col-md-4">
                <label  for="bairro">Bairro</label>
                <input type="text" class="form-control" id="bairro" name="bairro" required>
            </div>
            <div class="form-group col-md-4">
                <label for="regiao">Região</label>
                <input type="text" class="form-control" id="regiao" name="regiao" required>
            </div>
            <div class="form-row">
        <div class="form-group col-md-2">
            <label id="sex" for="sexo">Sexo</label>
            <select id="sexo" name="sexo" class="form-control" required>
                <option value= "N/A" selected>Escolher...</option>
                <option value="MASCULINO">Masculino</option>
                <option value="FEMININO">Feminino</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label id="dt" for="dtnascimento">Data de Nascimento</label>
            <input type="text" class="form-control" id="dtnascimento" name="dtnascimento" width="100" data-mask="00/00/0000" required>
        </div>
        </div>
        <div class="form-group col-md-4">
            <label  for="email">E-mail</label>
            <input type="text" class="form-control" id="email" name="email">
        </div>
        
        <div class="form-row">
        <div class="form-group col-md-2">
            <label id="est" for="estadocivil">Estado Civil</label>
            <select id="estadocivil" name="estadocivil" class="form-control" required>
                <option value="N/A" selected>Escolher...</option>
                <option value="SOLTEIRO(A)">Solteiro(a)</option>
                <option value="CASADO(A)">Casado(a)</option>
                <option value="DIVORCIADO(A)">Divorciado(a)</option>
                <option value="VIUVO(A)">Viuvo(a)</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label id="son" for="filhos">Filhos</label>
            <input type="text" class="form-control" id="filhos" name="filhos">
        </div>
        </div>

        <div class="form-group col-md-4">
            <label  for="origem">Origem</label>
            <input type="text" class="form-control" id="origem" name="origem">
        </div>
        <div class="form-group col-md-4">
            <label  for="observacao">Observação</label>
            <input type="text" class="form-control" id="observacao" name="observacao">
        </div>
    
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
      
